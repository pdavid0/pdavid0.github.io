{
  "name": "pdavid0-resume",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "build": "resume export index.html --theme elegant",
    "build-pdf": "./bin/wkhtmltopdf --viewport-size 1920x1080 --page-size A4 -T 0 -B 0 -L 0 -R 0 index.html resume.pdf",
    "build-png": "./bin/wkhtmltoimage --format png --width 1280 index.html resume.png",
    "deploy": "npm run build && git commit -am 'update' && git push"
  },
  "devDependencies": {
    "resume-cli": "^3.0.7"
  },
  "dependencies": {
    "resume": "0.0.1",
    "jsonresume-theme-elegant": "^1.16.1"
  }
}
